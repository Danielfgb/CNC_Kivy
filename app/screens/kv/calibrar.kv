<CalibrarScreen>:
    name: 'calibrar'
    MDBoxLayout:
        orientation: 'vertical'
        
        # Barra superior
        MDTopAppBar:
            id: toolbar
            title: "Placa de identificaci√≥n para mascotas"
            use_overflow: True
            left_action_items: [["arrow-left-bold", lambda x: root.go_back(), "INICIO"]]
            elevation: 0
            md_bg_color: [0.855, 0.435, 0.0, 1.0]

        # Recuadro de imagen o stream
        FloatLayout:
            size_hint_y: 0.4
            padding: 10

            AsyncImage:
                id: camera_image
                source: './app/resources/img/cam.png'  # Imagen predeterminada
                size_hint: (None, None)
                size: (200, 200)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

        # Contenedor para los botones de movimiento de ejes X e Y
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.3
            padding: 10
            spacing: 10

            FloatLayout:
                size_hint_x: 0.6
                padding: 10

                MDFloatingActionButton:
                    icon: "arrow-up"
                    on_release: root.move_y_positive()
                    pos_hint: {"center_x": 0.4, "center_y": 0.8}
                    text_color: [0, 0, 0, 1]  
                    md_bg_color: [1, 0.5, 0, 1]

                MDFloatingActionButton:
                    icon: "arrow-left"
                    on_release: root.move_x_negative()
                    pos_hint: {"center_x": 0.2, "center_y": 0.5}
                    text_color: [0, 0, 0, 1]  
                    md_bg_color: [1, 0.5, 0, 1]

                MDFloatingActionButton:
                    icon: "arrow-right"
                    on_release: root.move_x_positive()
                    pos_hint: {"center_x": 0.6, "center_y": 0.5}
                    text_color: [0, 0, 0, 1]  
                    md_bg_color: [1, 0.5, 0, 1]

                MDFloatingActionButton:
                    icon: "arrow-down"
                    on_release: root.move_y_negative()
                    pos_hint: {"center_x": 0.4, "center_y": 0.2}
                    text_color: [0, 0, 0, 1]  
                    md_bg_color: [1, 0.5, 0, 1]

            # Contenedor para los botones del eje Z y otros botones
            FloatLayout:
                size_hint_x: 0.4
                padding: 10

                MDFloatingActionButton:
                    icon: "arrow-up-bold"
                    on_release: root.move_z_positive()
                    pos_hint: {"center_x": 0.4, "center_y": 0.7}
                    text_color: [0, 0, 0, 1]  
                    md_bg_color: [1, 0.5, 0, 1]

                MDFloatingActionButton:
                    icon: "arrow-down-bold"
                    on_release: root.move_z_negative()
                    pos_hint: {"center_x": 0.4, "center_y": 0.3}
                    text_color: [0, 0, 0, 1]  
                    md_bg_color: [1, 0.5, 0, 1]

                MDRaisedButton:
                    id: dropdown_button
                    text: "# Placa"
                    text_color: [0, 0, 0, 1]  
                    md_bg_color: [1, 0.5, 0, 1]
                    pos_hint: {"center_x": 0.7, "center_y": 0.7}
                    on_release: root.show_dropdown()

                MDRaisedButton:
                    text: "Guardar"
                    text_color: [0, 0, 0, 1]  
                    md_bg_color: [1, 0.5, 0, 1]
                    pos_hint: {"center_x": 0.7, "center_y": 0.3}
                    on_release: root.save_settings()

        # Barra inferior para mostrar la hora
        MDBoxLayout:
            size_hint_y: None
            height: "48dp"
            md_bg_color: [0.855, 0.435, 0.0, 1.0]
            
            MDLabel:
                text: root.current_time
                halign: "left"
                valign: "middle"
                color: [0, 0, 0, 1]
