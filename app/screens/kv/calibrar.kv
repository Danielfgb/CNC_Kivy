<CalibrarScreen>:
    name: 'calibrar'
    MDBoxLayout:
        orientation: 'vertical'
        
        # Barra superior
        MDTopAppBar:
            id: toolbar
            title: "Placa de identificación para mascotas"
            use_overflow: True
            left_action_items: [["arrow-left-bold", lambda x: root.go_back(), "INICIO"]]
            elevation: 0
            md_bg_color: [0.855, 0.435, 0.0, 1.0]

        # Recuadro de imagen (lo puedes modificar más tarde)
        FloatLayout:
            size_hint_y: 0.4
            padding: 10

            Image:
                source: './app/resources/img/cam.png'
                size_hint: (None, None)
                size: (200, 200)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

        # Gamepad para mover ejes X y Y
        FloatLayout:
            size_hint_y: 0.4
            padding: 20

            MDFloatingActionButton:
                icon: "arrow-up"
                on_release: root.move_y_positive()
                pos_hint: {"center_x": 0.2, "center_y": 0.8}
                text_color: [0, 0, 0, 1]  
                md_bg_color: [1, 0.5, 0, 1]

            MDFloatingActionButton:
                icon: "arrow-left"
                on_release: root.move_x_negative()
                pos_hint: {"center_x": 0.1, "center_y": 0.5}
                text_color: [0, 0, 0, 1]  
                md_bg_color: [1, 0.5, 0, 1]

            MDFloatingActionButton:
                icon: "arrow-right"
                on_release: root.move_x_positive()
                pos_hint: {"center_x": 0.3, "center_y": 0.5}
                text_color: [0, 0, 0, 1]  
                md_bg_color: [1, 0.5, 0, 1]

            MDFloatingActionButton:
                icon: "arrow-down"
                on_release: root.move_y_negative()
                pos_hint: {"center_x": 0.2, "center_y": 0.2}
                text_color: [0, 0, 0, 1]  
                md_bg_color: [1, 0.5, 0, 1]

        FloatLayout:
            size_hint_y: 0.8
            padding: 10

            MDFloatingActionButton:
                icon: "arrow-up-bold"
                on_release: root.move_z_positive()
                pos_hint: {"center_x": 0.8, "center_y": 0.8}
                text_color: [0, 0, 0, 1]  
                md_bg_color: [1, 0.5, 0, 1]

            MDFloatingActionButton:
                icon: "arrow-down-bold"
                on_release: root.move_z_negative()
                pos_hint: {"center_x": 0.8, "center_y": 0.2}
                text_color: [0, 0, 0, 1]  
                md_bg_color: [1, 0.5, 0, 1]

            MDFillRoundFlatIconButton:
                text: "Guardar"
                icon: "content-save-cog"
                text_color: [0, 0, 0, 1]  
                md_bg_color: [1, 0.5, 0, 1]
                pos_hint: {"center_x": 0.9, "center_y": 0.4}
                on_release: root.save_settings()

            MDRaisedButton:
                id: dropdown_button
                text: "# Placa"
                text_color: [0, 0, 0, 1]  
                md_bg_color: [1, 0.5, 0, 1]
                pos_hint: {"center_x": 0.9, "center_y": 0.8}
                on_release: root.show_dropdown()

        # Barra inferior con reloj
        MDBoxLayout:
            size_hint_y: None
            height: "48dp"
            md_bg_color: [0.855, 0.435, 0.0, 1.0]
            
            MDLabel:
                text: root.current_time
                halign: "left"
                valign: "middle"
                color: [0, 0, 0, 1]
