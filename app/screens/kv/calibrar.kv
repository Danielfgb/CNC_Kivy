<CalibrarScreen>:
    name: 'calibrar'

    MDNavigationLayout:

        MDScreenManager:

            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'

                    # Barra superior
                    MDTopAppBar:
                        id: toolbar
                        title: "Placa de identificación para mascotas"
                        use_overflow: True
                        left_action_items: [["arrow-left-bold", lambda x: root.go_back(), "INICIO"]]
                        right_action_items:[['menu', lambda x: nav_drawer.set_state("open")]]
                        elevation: 0
                        md_bg_color: [0.855, 0.435, 0.0, 1.0]

                    # Recuadro de imagen o stream
                    FloatLayout:
                        size_hint_y: 0.5
                        padding: 20

                        Image:
                            id: camera_image
                            size_hint: (1, 1)
                            pos_hint: {"center_x": 0.5, "center_y": 0.4}
                            #on_touch_up: root.on_touch_up(*args)

                                                    # Botón para alternar zoom
                        MDFloatingActionButton:
                            icon: "magnify"
                            size: dp(40), dp(40)
                            pos_hint: {"right": 1, "y": 0}
                            md_bg_color: [1, 0.5, 0, 1]
                            on_touch_down: root.camera_controller.toggle_zoom() 

                    # Contenedor de valores actuales
                    BoxLayout:
                        size_hint_y: 0.2
                        padding: 10
                        spacing: 10

                        MDCard:
                            size_hint_y: None
                            height: "100dp"
                            padding: 10
                            md_bg_color: [0.95, 0.95, 0.95, 1.0]

                            BoxLayout:
                                orientation: 'vertical'
                                spacing: 10

                                MDLabel:
                                    text: "Posición tag"
                                    font_size: '20sp'
                                    halign: 'center'
                                    theme_text_color: "Secondary"
                                    bold: True

                                MDLabel:
                                    text: "X: " + str(root.selected_tag_location[0])
                                    halign: 'center'

                                MDLabel:
                                    text: "Y: " + str(root.selected_tag_location[1])
                                    halign: 'center'

                                MDLabel:
                                    text: "Z: " + str(root.selected_tag_location[2])
                                    halign: 'center'

                        # Tarjeta para las nuevas etiquetas
                        MDCard:
                            size_hint_y: None
                            height: "100dp"
                            padding: 10
                            md_bg_color: [0.95, 0.95, 0.95, 1.0]

                            BoxLayout:
                                orientation: 'vertical'
                                spacing: 10

                                MDLabel:
                                    text: "Posición actual"
                                    font_size: '20sp'
                                    halign: 'center'
                                    theme_text_color: "Secondary"
                                    bold: True

                                MDLabel:
                                    text: "X: " + str(root.new_location[0])
                                    halign: 'center'

                                MDLabel:
                                    text: "Y: " + str(root.new_location[1])
                                    halign: 'center'

                                MDLabel:
                                    text: "Z: " + str(root.new_location[2])
                                    halign: 'center'

                    # Contenedor para los botones de movimiento de ejes X e Y
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: 0.3
                        #transition: NoTransition()
                        padding: 10
                        spacing: 10

                        FloatLayout:
                            size_hint_x: 0.5
                            padding: 10

                            MDFloatingActionButton:
                                icon: "arrow-up"
                                on_release: root.move_y_positive()
                                elevation: 0
                                pos_hint: {"center_x": 0.4, "center_y": 0.8}
                                text_color: [0, 0, 0, 1]  
                                md_bg_color: [1, 0.5, 0, 1]

                            MDFloatingActionButton:
                                icon: "arrow-left"
                                on_release: root.move_x_negative()
                                elevation: 0
                                pos_hint: {"center_x": 0.2, "center_y": 0.5}
                                text_color: [0, 0, 0, 1]  
                                md_bg_color: [1, 0.5, 0, 1]

                            MDFloatingActionButton:
                                icon: "arrow-right"
                                on_release: root.move_x_positive()
                                elevation: 0
                                pos_hint: {"center_x": 0.6, "center_y": 0.5}
                                text_color: [0, 0, 0, 1]  
                                md_bg_color: [1, 0.5, 0, 1]

                            MDFloatingActionButton:
                                icon: "arrow-down"
                                on_release: root.move_y_negative()
                                elevation: 0
                                pos_hint: {"center_x": 0.4, "center_y": 0.2}
                                text_color: [0, 0, 0, 1]  
                                md_bg_color: [1, 0.5, 0, 1]

                        # Contenedor para los botones del eje Z y otros botones
                        FloatLayout:
                            size_hint_x: 0.5
                            padding: 10

                            MDFloatingActionButton:
                                icon: "home"
                                on_release: root.go_home()
                                elevation: 0
                                pos_hint: {"center_x": 0, "center_y": 0.8}
                                text_color: [0, 0, 0, 1]  
                                md_bg_color: [1, 0.5, 0, 1]

                            MDFloatingActionButton:
                                icon: "tray-arrow-down"
                                #on_release: root.go_home()
                                elevation: 0
                                pos_hint: {"center_x": 0, "center_y": 0.5}
                                text_color: [0, 0, 0, 1]  
                                md_bg_color: [1, 0.5, 0, 1]

                            MDFloatingActionButton:
                                icon: "stop"
                                on_release: root.stop_all_movement()
                                elevation: 0
                                pos_hint: {"center_x": 0, "center_y": 0.2}
                                text_color: [0, 0, 0, 1]  
                                md_bg_color: [1, 0.5, 0, 1]

                            MDFloatingActionButton:
                                icon: "arrow-up-bold"
                                on_release: root.move_z_positive()
                                elevation: 0
                                pos_hint: {"center_x": 0.35, "center_y": 0.7}
                                text_color: [0, 0, 0, 1]  
                                md_bg_color: [1, 0.5, 0, 1]

                            MDFloatingActionButton:
                                icon: "arrow-down-bold"
                                on_release: root.move_z_negative()
                                elevation: 0
                                pos_hint: {"center_x": 0.35, "center_y": 0.3}
                                text_color: [0, 0, 0, 1]  
                                md_bg_color: [1, 0.5, 0, 1]

                            MDRaisedButton:
                                id: dropdown_button
                                text: "# Placa"
                                elevation: 0
                                text_color: [0, 0, 0, 1]  
                                md_bg_color: [1, 0.5, 0, 1]
                                pos_hint: {"center_x": 0.7, "center_y": 0.7}
                                on_release: root.show_menu(self)

                            MDRaisedButton:
                                text: "Guardar"
                                text_color: [0, 0, 0, 1]  
                                elevation: 0
                                md_bg_color: [1, 0.5, 0, 1]
                                pos_hint: {"center_x": 0.7, "center_y": 0.3}
                                on_release: root.save_settings()

                    # Barra inferior para mostrar la hora
                    MDBoxLayout:
                        size_hint_y: None
                        height: "48dp"
                        md_bg_color: [0.855, 0.435, 0.0, 1.0]

                        MDLabel:
                            text: root.current_time
                            halign: "left"
                            valign: "middle"
                            color: [0, 0, 0, 1]

        # Menú de navegación lateral
        MDNavigationDrawer:
            id: nav_drawer
            anchor: 'right'
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "Configuración"
                    icon:"cogs"
                    title_color: "#4a4939"
                    text: "Configuración calibración"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                # MDNavigationDrawerLabel:
                #     text: "Configuración"

                OneLineIconListItem:
                    text: "Ir a home"
                    IconLeftWidget:
                        icon: "home"
                        on_release: root.go_home()

                OneLineIconListItem:
                    text: "Restablecer coordenadas"
                    IconLeftWidget:
                        icon: "restore"
                        on_release: root.reset_coordinates()   

                OneLineIconListItem:
                    text: "Modificar Recorrido"
                    IconLeftWidget:
                        icon: "pencil"
                        #on_release: root.modify_travel_distance()     

                OneLineIconListItem:
                    text: "Dispensar Placa"
                    IconLeftWidget:
                        icon: "clipboard-text"
                        #on_release: root.                 

                OneLineIconListItem:
                    text: "Comandos de Test"
                    IconLeftWidget:
                        icon: "tools"
                        #on_release: root.     

<DistanceDialogContent>:
    orientation: 'vertical'
    spacing: '12dp'
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id: x_y_field
        hint_text: "Nuevo valor para X e Y"
        input_filter: 'float'
        helper_text: "Entre 0 y 200 mm"
        helper_text_mode: "on_focus"